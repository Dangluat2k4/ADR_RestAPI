<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/khung">

    <LinearLayout
        android:layout_width="320sp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        >
        <TextView
            android:text="Date"
            android:layout_marginTop="5sp"
            android:id="@+id/txtDateB"
            android:layout_width="match_parent"
            android:textSize="20sp"
            android:layout_height="50dp"/>
        <TextView
            android:text="Email"
            android:id="@+id/txtMailB"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:inputType="text" />

        <TextView
            android:text="Xem chi tiáº¿t"
            android:id="@+id/txtChiTiet"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="17sp"
            android:textColor="#002BFF"
            android:inputType="text" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="70sp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        >

        <Button
            android:id="@+id/btnDeleteB"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="10sp"
            android:background="@drawable/delete" />
        <Button
            android:id="@+id/btnUpdateB"
            android:layout_width="30dp"
            android:layout_height="33dp"
            android:background="@drawable/baseline_browser_updated_24"/>
    </LinearLayout>

</LinearLayout>