<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/khung"
    android:layout_margin="10dp"
    >
        <LinearLayout
            android:layout_width="320sp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            >
            <TextView
                android:text="Product Name"
                android:layout_marginTop="5sp"
                android:id="@+id/txtPrdName"
                android:layout_width="match_parent"
                android:textSize="20sp"
                android:layout_height="50dp"/>
            <TextView
                android:text="Description"
                android:id="@+id/txtPrdDct"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="20sp"
                android:inputType="text" />

            <TextView
                android:id="@+id/txtPrdPrice"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Price"
                android:textSize="20sp" />
            <Button
                android:id="@+id/btnDatMua"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Đặt mua"
                android:textSize="20dp"
                android:textStyle="bold"
                android:backgroundTint="#FF0000"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            >

            <Button
                android:id="@+id/btnDeleteProduct"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="10sp"
                android:background="@drawable/delete" />
            <Button
                android:id="@+id/btnUpdatePRD"
                android:layout_width="30dp"
                android:layout_height="33dp"
                android:background="@drawable/baseline_browser_updated_24"/>
        </LinearLayout>
</LinearLayout>